<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/vector_1"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/vector_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vector_3"
        android:layout_width="188dp"
        android:layout_height="200.2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="630dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_boqua"
        android:layout_width="54dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginEnd="24dp"
        android:layout_marginBottom="21dp"
        android:gravity="right|center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="Bỏ qua"
        android:fontFamily="@font/inter_bold"
        android:textColor="#97A2B0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/vector_1"
        app:layout_constraintEnd_toEndOf="@id/vector_1"

        app:layout_constraintTop_toTopOf="@id/vector_1" />
    <ImageView
        android:id="@+id/vector_2"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/vector_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />


    <ImageView
        android:id="@+id/imgView_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="342dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="114dp"
        app:layout_constraintTop_toTopOf="@id/vector_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/onboarding_picture_1" />


    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="327dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="Khám phá thực đơn đáp ứng đầy đủ sức kho"
        android:fontFamily="@font/inter_bold"
        android:textColor="#030319"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgView_onboarding" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="307dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="4sp"
        android:text="1500+ bữa ăn tiêu chuẩn giúp bạn đủ chất mà vẫn 'khỏe túi tiền'"
        android:fontFamily="@font/inter_regular"
        android:textColor="#48525F"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_heading" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_onboarding"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Tiếp tục ->"
        android:fontFamily="@font/inter_bold"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_onboarding"
        />




</androidx.constraintlayout.widget.ConstraintLayout>